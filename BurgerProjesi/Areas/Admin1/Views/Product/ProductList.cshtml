@model List<BurgerProjesi.Entities.Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Admin1/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ÜRÜN ID</th>
                            <th>ÜRÜN GÖRSEL</th>
                            <th>ÜRÜN ADI</th>
                            <th>ÜRÜN KATEGORİ </th>
                            <th>SİL</th>
                            <th>GÜNCELLE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductID</td>
                                <td><img src="@item.ImageUrl" height="50" width="50"/></td>
                                <td>@item.ProductName</td>
                                <td>@item.Category.CategoryName</td>
                                <td><a href="/Admin1/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin1/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
                            </tr>

                        }


                    </tbody>
                </table>
                <td><a href="/Admin1/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Girişi</a></td>
            </div>
        </div>
    </div>
</div>
